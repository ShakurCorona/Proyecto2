<%- include('partials/_header') %>

<div class="container">
    <div class="row mt-5">
        <div class="col-md-7">
            <table class="table table-bordered table-hover">
                <thead>
                    <tr>
                        <th>Tipo de Pie</th>
                        <th>Ingredientes</th>
                    </tr>
                </thead>
                <tbody>
                    <% if (data) { %>
                        <% for (var i = 0; i < data.length; i++) { %>
                            <tr>
                                <td><%= data[i].nombrePie %></td>
                                <td><%= data[i].ingredientes %></td>
                                <td>
                                    <a href="/delete/<%= data[i].id %>" class="btn btn-danger">Eliminar</a>
                                    <a href="/update<%= data[i].id %>" class="btn btn-info">Editar</a>
                                </td>
                            </tr>
                        <% } %>
                    <% } %>
                </tbody>
            </table>
        </div>

        <div class="col-md-5">
            <div class="card">
                <div class="card-body">
                    <form action="/add" method="post">
                        <div class="form-group">
                            <input type="text" name="nombrePie" placeholder="Nombre del pie" class="form-control">
                        </div>
                        <div class="form-group">
                            <input type="text" name="ingredientes" placeholder="Ingredientes" class="form-control">
                        </div>
                        <button type="submit" class="btn btn-primary">
                            AÃ±adir nuevo pie.
                        </button>
                    </form>
                </div>
            </div>
         </div>
    </div>
</div>

<%- include('partials/_footer') %>