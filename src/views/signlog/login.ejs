<%- include('../partials/_header') %>

<div class="container p-4">
    <%- include('../partials/_message') %>
    <div class="row">
        <div class="row">
            <div class="col-md-4 mx-auto">
                <div class="card text-center">
                    <div class="card-header">
                        <h3>Inicio de sesion</h3>
                    </div>
                    <div class="card-body">
                        <img src="./assets/usuario.png" alt="Usuario pie." class="card-img-top mx-auto">
                        <form action="/login" method="POST">
                            <div class="form-group">
                                <input type="email" name="correo" placeholder="Ingresa tu correo" class="form-control">
                            </div>
                            <div class="form-group">
                                <input type="password" name="contrasenia" placeholder="Ingresa tu contraseña" class="form-control">
                            </div>
                            <div class="form-group p-2">
                                <button class="btn btn-primary btn-block">Iniciar sesion</button>
                            </div>
                        </form>
                    </div>
                </div>
                <div class="container text-center">
                    ¿No tienes una cuenta? <a href="/signup" action="/signup" method="GET">Registrarme</a>.
                </div>
            </div>
        </div>
    </div>
</div>

<%- include('../partials/_footer') %>