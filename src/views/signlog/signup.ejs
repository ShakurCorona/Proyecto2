<%- include('../partials/_header') %>

<div class="container p-4">
    <div class="row">
        <div class="row">
            <div class="col-md-4 mx-auto">
                <div class="card text-center">
                    <div class="card-header">
                        <h3>Registro de usuarios</h3>
                    </div>
                    <div class="card-body">
                        <form action="/signup" method="POST">
                            <div class="form-group">
                                <input type="text" name="nombreUsuario" placeholder="Ingresa tu nombre de usuario." class="form-control" autofocus>
                            </div>
                            <div class="form-group">
                                <input type="email" name="correo" placeholder="Ingresa tu correo" class="form-control">
                            </div>
                            <div class="form-group">
                                <input type="password" name="contrasenia" placeholder="Ingresa tu contraseña" class="form-control">
                            </div>
                            <div class="form-group p-2">
                                <button class="btn btn-primary btn-block">¡Registrame!</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<%- include('../partials/_footer') %>